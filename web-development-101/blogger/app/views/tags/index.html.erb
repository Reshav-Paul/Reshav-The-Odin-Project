<h1>All Tags</h1>

<ul id="tags">
    <% @tags.each do |tag| %>
        <li>
            <%= link_to tag.name, tag_path(tag), class: "tag_name" %>
            &nbsp; &nbsp; &nbsp;
            <%= link_to "Delete Tag", tag_path(tag) , method: :delete,
                data: {confirm: "Are you sure you want to delete the article?"} %>
            <br>
        </li>
    <% end %>
</ul>
