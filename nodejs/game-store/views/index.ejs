<%- include('partials/header') %>

  <div class="container-xl mt-4 mb-4">
    <h3 class="mt-5">Categories</h4>
  </div>
  
  <% if (data) { %>
    
    <div class="container-xl">
      <ul class="list-unstyled row row-cols-1 row-cols-md-2 row-cols-lg-3" id="categories">
        <% data.forEach(function(category) { %>

          <li class="category col mb-4">
            <div class="card shadow-sm h-100">
              <img src="<%= category.imageUrl %>"  alt="Category Image" class="card-img-top">
              <h5 class="card-header"><%- category.name %> </h5>
              <div class="card-body">
                <p class="card-text"><%- category.description %> </p>
                <a href="<%= category.url %>" class="btn btn-outline-dark font-weight-bold">See More</a>
              </div>
            </div>
          </li>

        <% }) %> 
      </ul>
    </div>

  <% } else { %>

    <div class="container">
      <h1>Sorry, something went wrong!</h1>
    </div>

  <% } %> 

<%- include('partials/footer') %>