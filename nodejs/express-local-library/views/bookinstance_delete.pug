extends layout

block content
    h1 #{title}: #{bookinstance.imprint} (#{bookinstance._id})

    p Do you really want to delete this Copy?

        form(method='POST' action='')
            div.form-group
                input#bookid.form-control(type='hidden',name='bookid', required='true', value=bookinstance.book )
                input#bookinstanceid.form-control(type='hidden',name='bookinstanceid', required='true', value=bookinstance._id )

            button.btn.btn-primary(type='submit') Delete