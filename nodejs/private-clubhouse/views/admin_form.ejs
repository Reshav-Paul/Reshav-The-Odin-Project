<%- include('partials/header') %> 

<% if (locals.currentUser) { %> 

    <% if (!currentUser.isAdmin) { %> 
        <form action="" method="post" class="limited-width container py-3">
            <h4>Enter the admin password</h4>
            <br>
            <div class="form-group">
                <input type="password" name="answer" id="answer" class="form-control" placeholder="Password" required>
            </div>
            <% if (locals.error) { %> 
                <div class="alert alert-danger"><%= error %> </div>
            <% } %> 
            <div class="form-group text-center">
                <input type="submit" value="Submit" class="btn btn-success">
            </div>
        </form>
    <% } else  { %> 
        <div class="container">
            <p class="py-3">You are already an admin.</p>
        </div>
    <% } %> 

<% } else { %> 
    <%- include('partials/login_prompt') %> 
<% } %> 

<%- include('partials/footer') %> 